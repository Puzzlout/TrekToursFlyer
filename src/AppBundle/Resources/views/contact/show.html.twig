{% extends 'AppBundle::layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}{{ parent() }} {% trans from 'contact' %} page_title {% endtrans %}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}
{% block content %}
    <h2 class="contact-title-form">{% trans from 'contact' %} h2_contact {% endtrans %}</h2>
    <div class="container">
        {% for flash_message in app.session.flashBag.get('cri_success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        <div id="customer_info_request">
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.first_name) }}
                {{ form_errors(form.first_name) }}
                {{ form_widget(form.first_name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.last_name) }}
                {{ form_errors(form.last_name) }}
                {{ form_widget(form.last_name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div class="form-group">
                {{ form_label(form.send_copy_to_client) }}
                {{ form_errors(form.send_copy_to_client) }}
                {{ form_widget(form.send_copy_to_client) }}
            </div>
            <div class="form-group">
                {{ form_label(form.phone_number) }}
                {{ form_errors(form.phone_number) }}
                {{ form_widget(form.phone_number) }}
            </div>
            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_errors(form.message) }}
                {{ form_widget(form.message) }}
            </div>
            <div class="form-group g-recaptcha" data-sitekey="{{ recaptcha_key }}"></div>
            <div class="form-group">
                {{ form_widget(form.send) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}