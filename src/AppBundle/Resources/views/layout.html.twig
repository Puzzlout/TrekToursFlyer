{% extends '::base.html.twig' %}
{% block title %}E-bike Mont-Blanc - {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
    'bundles/app/vendor/bootstrap.min.css'
    'bundles/app/vendor/font-awesome.min.css'
    'bundles/app/css/*'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Varela+Round" rel="stylesheet">
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'bundles/app/vendor/jquery.min.js'
    'bundles/app/vendor/bootstrap.min.js'
    'bundles/app/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block body %}
    {% block header %}
        <header>
            {{ render(controller('AppBundle:CommonModule:headerMenu')) }}
            {% block homepage_carousel %}{% endblock %}
        </header>
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
        {{ render(controller('AppBundle:CommonModule:footer')) }}
    {% endblock %}
    {{ render(controller('AppBundle:CommonModule:cookie')) }}
    {{ render(controller('AppBundle:CommonModule:analytics')) }}
{% endblock %}