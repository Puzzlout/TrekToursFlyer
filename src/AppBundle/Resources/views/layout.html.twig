{% extends '::base.html.twig' %}
{% block title %}Trek Tours Flyer - {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'assets/vendor/bootstrap/dist/css/bootstrap.min.css'
        'bundles/app/css/*'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'assets/vendor/jquery/dist/jquery.min.js'
        'assets/vendor/bootstrap/dist/js/bootstrap.min.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block body %}
    {% block header %}
        <header>
            <nav class="navbar transparent navbar-fixed-top navbar-default">
                <div class="container-fluid">
                    <div class="navbar-collapse collapse" id="navbar">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">Home</a></li>
                            <li class="active"><a href="#">Trek "Mont Blanc"</a></li>
                            <li><a href="#">Basket</a></li>
                            <li><a href="#">My Account</a></li>
                            <li class="divider"></li>
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><img src="/favicon.ico" alt="English" /> <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#" class="language" rel="en-US"><img src="/favicon.ico" alt="English" /> EN</a></li>
                                    <li><a href="#" class="language" rel="fr-FR"><img src="/favicon.ico" alt="French"/> FR</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
        <footer>
            <hr/>
            <div class="container">
                <div class="row">
                    <span class="col-md-3">Sales terms</span>
                    <span class="col-md-3">Legal Information</span>
                    <span class="col-md-3">Hotel Chenamaz</span>
                    <span class="col-md-3">Contact</span>
                </div>

            </div>
        </footer>
    {% endblock %}
{% endblock %}