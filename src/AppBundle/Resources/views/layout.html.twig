{% extends '::base.html.twig' %}
{% block title %}Trek Tours Flyer - {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/app/css/app-style.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/app/css/app-theme.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script
            src="https://code.jquery.com/jquery-2.2.4.min.js"
            integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/app/js/common.js') }}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    {% block header %}
        <header>
            {{ render(controller('AppBundle:CommonModule:headerMenu')) }}
        </header>
    {% endblock %}
    {% block content %}{% endblock %}
    {% block footer %}
        <footer>
            <hr/>
            <div class="container">
                <div class="row">
                    <span class="col-md-3">Sales terms</span>
                    <span class="col-md-3">Legal Information</span>
                    <span class="col-md-3">Hotel Chenamaz</span>
                    <span class="col-md-3">Contact</span>
                </div>

            </div>
        </footer>
    {% endblock %}
{% endblock %}